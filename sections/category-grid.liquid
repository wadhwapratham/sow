<section class="category-grid">
  <div class="category-grid-main">
    <div class="ethics-header">
      <h2 class="section-title h2">{{ section.settings.heading }}</h2>
    </div>
    <div class="main-category-wrapper">
      {% for block in section.blocks %}
        <div class="category-grid-item">
          <a href="{{ block.settings.link }}">
            <img src="{{ block.settings.image | img_url: '' }}" width="100" height="100" loading="lazy">
            <h3>{{ block.settings.title }}</h3>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


{% stylesheet %}
.category-grid-item img {
    width: 100%;
    height: auto;
    max-width: 218px;
    border-radius: 28px;
}
.main-category-wrapper {
    display: flex;
    justify-content: center;
    gap: 60px;
    padding: 80px 32px;
}
.category-grid-item a {
    display: flex;
    text-align: center;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 30px;
}
.category-grid-item a h3 {
    font-weight: 600;
    font-size: 18px;
    color: #1B4B35;
    text-transform: uppercase;
    line-height: 27px;
}
.category-grid-main {
    max-width: 80%;
    margin: auto;
}
@media screen and (max-width: 1280px){
  .main-category-wrapper {
    gap: 40px;
  }
}

@media screen and (max-width: 1024px){
  .main-category-wrapper {
    gap: 20px;
  }
  .category-grid-item a {
    gap: 10px;
  }
  .category-grid-main {
    max-width: 100%;
    margin: auto;
  }
  .main-category-wrapper .slick-arrow {
    top: 45%;
  }
}

@media screen and (max-width: 525px){
  .main-category-wrapper .slick-next {
    right: 40px;
  }
 .main-category-wrapper .slick-prev {
    left: 40px;
  }
}
{% endstylesheet %}

{% schema %}
  {
    "name": "Category Grid",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading"
      }
    ],
    "blocks": [
      {
        "name" : "Collection",
        "type": "repeater",
        "limit": 4,
        "settings": [
          {
            "type": "url",
            "id" : "link",
            "label": "Colleciton Link"
          },
          {
            "type": "image_picker",
            "id" : "image",
            "label": "Colleciton Image"
          },
          {
            "type": "text",
            "id" : "title",
            "label": "Colleciton Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Category Grid"
      }
    ]
  }
{% endschema %}
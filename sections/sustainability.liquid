<section class="sustainability-section" style="background: {{ section.settings.bgcol }};">
  <div class="sustain-wrapper">
    <div class="ethics-header" data-aos="fade-up" data-aos-duration="500">
      <h2 class="section-title h2">{{ section.settings.heading }}</h2>
    </div>
    <div class="slider-wrapper-ethic">
      <div class="container-main-ethics" data-aos="fade-up" data-aos-duration="1000">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
          <div class="ethic-slider">
            {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
            <div class="item-ethics">
              <img src="{{ block.settings.image | img_url:'300x' }}" alt="" width="100" height="100" loading="lazy">
              <h3 style="color:{{ section.settings.txtcol }}; text-transform: {{ section.settings.transform }};">{{ block.settings.title }}</h3>
            </div>  
            {% if block.settings.link != blank %}</a>{% endif %}
          </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
.sustain-wrapper {
    padding: 24px 0 64px;
}
/* .ethic-slider:first-child .item-ethics {
    padding-left: 0;
}
.ethic-slider:last-child .item-ethics {
    padding-right: 0;
} */

.item-ethics img {
    width: 155px;
    height: 155px;
}
.container-main-ethics {
    max-width: 1376px;
    margin: 54px auto 0;
    padding: 0 24px;
    display: flex;
    gap: 91px;
    flex-wrap: wrap;
    align-items: baseline;
    justify-content: center;
}
.item-ethics {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 10px;
    padding: 0 0;
    text-align: center;
    max-width: 218px;
    align-items: center;
}
.item-ethics h3 {
    color: #042f18;
    font-family: Poppins;
    font-weight: 600;
    font-size: 18px;
}

@media screen and (max-width: 1024px){
  .item-ethics img {
    width: 130px;
    height: 130px;
  }
  .container-main-ethics {
    padding: 20px;
  }
}

@media screen and (max-width: 525px){
  .item-ethics {
    padding: 0 20px;
  }
   .container-main-ethics {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 0px;
      row-gap: 20px;
      margin: 36px auto 0;
    }
  .sustain-wrapper {
    padding: 48px 0;
  }
    
}
{% endstylesheet %}

{% schema %}
  {
    "name": "SUSTAINABILITY & ETHICS",
    "settings": [
      {
        "type": "color",
        "id": "bgcol",
        "label": "Background Color",
        "default" : "#FFFFFF"
      },
      {
        "type": "color",
        "id": "txtcol",
        "label": "Block Text Color",
        "default" : "#1B4B35"
      },
      {
        "type": "text",
        "id": "transform",
        "label": "Text Transformation",
        "default" : "uppercase"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading"
      }
    ],
    "blocks": [
      {
        "type": "repeater",
        "name" : "Ethics",
        "limit": 4,
        "settings": [
          {
            "id" : "image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Block Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "SUSTAINABILITY & ETHICS"
      }
    ]
  }
{% endschema %}
<section class="collection-header" id="collection-{{ collection.id }}">
  <div class="collection-header-wrapper">
    <picture>
      {% if section.settings.m_img != blank %}
      <source srcset="{{ section.settings.d_img | img_url:'1920x' }}" media="(min-width: 601px)">
      <source srcset="{{ section.settings.m_img | img_url:'600x' }}" media="(max-width: 600px)">
      {% endif %}
      <img src="{{ section.settings.d_img | img_url:'1920x' }}" alt="{{ section.settings.d_img.alt }}" width="100" height="100" loading="eager">
    </picture>

    <div class="collection-top--head">
      <div class="head-tem-wrap section-width">
        <h1>{{ collection.title }}</h1>
        <!-- <p>{{ collection.metafields.custom.collection_subhead }}</p> -->
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
.collection-header-wrapper img {
    width: 100%;
    height: auto;
}
.collection-header-wrapper picture {
    display: flex;
}
.head-tem-wrap {
    margin: auto;
    padding: 64px 24px 28px;
}
.head-tem-wrap h1 {
    margin: 0;
    font-size: 26px;
    line-height: 26px;
    color: #054327;
    font-weight: 600;
    font-family: 'Poppins';
}
.head-tem-wrap p {
    margin: 0;
    font-size: 12px;
    color: #433F3E;
    line-height: 16px;
}

{% endstylesheet %}

{% schema %}
  {
    "name": "Collection Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "d_img",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "m_img",
        "label": "Mobile Image"
      }
    ],
    "presets": [
      {
        "name": "Collection Header"
      }
    ]
  }
{% endschema %}
}
{% endstylesheet %}
  
{% schema %}
  {
    "name": "Homepage Slideshow",
    "settings": [],
    "blocks": [
      {
        "type": "slider",
        "name" : "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "d_img",
            "label": "Desktop Image"
          },
          {
            "type": "image_picker",
            "id": "m_img",
            "label": "Mobile Image"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "subhead",
            "label": "Content"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Button Link"
          },
          {
            "type": "text",
            "id": "label",
            "label": "Button Label",
            "default" : "Know More"
          },
          {
            "type": "color",
            "id": "headColor",
            "label": "Heading Color",
            "default" : "#FFFFFF"
          },
          {
            "type": "color",
            "id": "textColor",
            "label": "Subheading Color",
            "default" : "#FFFFFF"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Homepage Slideshow"
      }
    ]
  }
{% endschema %}
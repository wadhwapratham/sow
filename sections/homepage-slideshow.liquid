@media screen and (max-width: 768px){
  .slide-content {
    left: 0;
    right: 0;
    width: 80%;
    max-width: 100%;
  }
  .slide-content h2 {
    font-size: 68px;
    line-height: 80px;
    max-width: 100%;
  }
  .slide-content p {
    max-width: 100%;
  }
}

@media screen and (max-width: 525px){
  .slide-content a {
    margin: 40px auto 0;
  }
  .slide-content p {
    text-align: center;
    margin-top: 30px;
  }
  .slide-content h2 {
    font-size: 56px;
    text-align: center;
    line-height: 63px;
  }
  .slide-content h2 em {
    width: 100%;
    display: block;
    margin-top: 10px;
  }
  .slide-content {
    width: 100%;
    padding: 0 24px;
    max-width: 100%;
    top: unset;
    bottom: 120px;
  }
